rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Solo permitir lectura pública de archivos en chat_files si lo necesitás
    match /chat_files/{userKey}/{fileName=**} {
      // Lectura pública opcional (puedes cambiar a request.auth != null si querés restringir)
      allow read: if true;

      // Escritura sólo para usuarios autenticados (anónimo cuenta) y sólo PDFs <= 10MB
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType == 'application/pdf'
                   && fileName.matches(".*\\.pdf$");
    }

    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
